{
  "dataRoles": [
    {
      "displayName": "Actual value",
      "name": "Values",
      "kind": "Measure",
      "requiredTypes" : [{"numeric":true  }]
    },
    {
      "displayName": "Target value",
      "name": "Targets",
      "kind": "Measure",
      "requiredTypes" : [{"numeric":true  }]
    },
    {
      "displayName": "Trend axis",
      "name": "Category",
      "kind": "Grouping"
    },
    {
      "displayName": "Trend actual value (if other than actual)",
      "name": "ValuesTrendActual",
      "kind": "Measure",
      "requiredTypes" : [{"numeric":true  }]
    },
    {
      "displayName": "Trend target value (if other than target)",
      "name": "ValuesTrendTarget",
      "kind": "Measure",
      "requiredTypes" : [{"numeric":true  }]
    }
  ],

  "dataViewMappings": [
    {
      "conditions": [
        {
          "Values": { "max": 1 },
          "Category": { "max": 1 },
          "Targets": { "max": 1 },
          "ValuesTrendActual": { "max": 1 },
          "ValuesTrendTarget": { "max": 1 }
        }
      ],
      "categorical": {
        "categories": {
          "for": { "in": "Category" },
          "dataReductionAlgorithm": { "top": { } }
        },
        "values": {
          "group": {
            "by": "Series",
            "select": [
              { "bind": { "to": "Values" } },
              { "bind": { "to": "Targets" } },
              { "bind": { "to": "ValuesTrendActual" } },
              { "bind": { "to": "ValuesTrendTarget" } }
            ],
            "dataReductionAlgorithm": { "top": { } }
          }
        }
      }
    }
  ],
  "sorting": {
    "default": { }
  },

  "objects": {
    "kpi": {
      "displayName": "KPI General",
      "properties": {
        "pKPIName": {
          "displayName": "KPI name",
          "type": { "text": true }
        },
        "pBandingPercentage": {
          "displayName": "Banding percentage",
          "type": { "numeric": true }
        },
        "pBandingType": {
          "displayName": "Banding type",
          "type": {
            "enumeration": [
              {
                "value": "IIB",
                "displayName": "Increasing is better"
              },
              {
                "value": "DIB",
                "displayName": "Decreasing is better"
              },
              {
                "value": "CIB",
                "displayName": "Closer is better"
              }
            ]
          }
        },
        "pBandingCompareType": {
          "displayName": "Banding comparison",
          "type": {
            "enumeration": [
              {
                "value": "ABS",
                "displayName": "Absolute"
              },
              {
                "value": "REL",
                "displayName": "Relative"
              }
            ]
          }
        },
        "pIndicateDifferenceAsPercent": {
          "displayName": "Deviation as %",
          "type": { "bool": true }
        },
        "pChartType": {
          "displayName": "Chart type",
          "type": {
            "enumeration": [
              {
                "value": "LINE",
                "displayName": "Line"
              },
              {
                "value": "BAR",
                "displayName": "Bar"
              }
            ]
          }
        },
        "pForceThousandSeparator": {
          "displayName": "Thousands separator",
          "type": { "bool": true }
        },
        "pFixedTarget": {
          "displayName": "Static target",
          "type": { "numeric": true }
        },
        "pDisplayDeviation": {
          "displayName": "Display deviation",
          "type": { "bool": true }
        },
        "pConstantActual": {
          "displayName": "Actual heading tooltip",
          "type": { "text": true }
        },
        "pConstantTarget": {
          "displayName": "Target heading tooltip",
          "type": { "text": true }
        }
      }
    },

    "kpiFonts": {
      "displayName": "KPI Font Size",
      "properties": {
        "show": {
          "displayName": "KPI Custom Font Size",
          "type": { "bool": true }
        },
        "pKPIFontSizeHeading": {
          "displayName": "Heading",
          "type": { "numeric": true }
        },
        "pKPIFontSizeActual": {
          "displayName": "Actual",
          "type": { "numeric": true }
        },
        "pKPIFontSizeDeviation": {
          "displayName": "Deviation",
          "type": { "numeric": true }
        }
      }
    },
    "kpiColors": {
      "displayName": "KPI Colors",
      "properties": {
        "pKPIColorGood": {
          "displayName": "Good",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "pKPIColorNeutral": {
          "displayName": "Neutral",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "pKPIColorBad": {
          "displayName": "Bad",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "pKPIColorNone": {
          "displayName": "None",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "pKPIColorText": {
          "displayName": "Text",
          "type": { "fill": { "solid": { "color": true } } }
        },
        "pKPIColorTrend": {
          "displayName": "Trend",
          "type": { "fill": { "solid": { "color": true } } }
        }
      }
    }

  }

}
